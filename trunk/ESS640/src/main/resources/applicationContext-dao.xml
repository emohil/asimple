<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

	<!-- component-scan自动搜索@Component , @Controller , @Service , @Repository等标注的类 -->
	<context:component-scan base-package="com.norming.ess.**.dao" />

	<bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	
	
	<bean id="commonDao"  class="com.norming.ess.common.dao.impl.CommonDaoImpl">	
		<property name="dataSource" ref="dataSource"/>
	</bean>
	<bean id="commonDaoDynamic"  class="com.norming.ess.common.dao.impl.CommonDaoImpl">	
		<property name="dataSource" ref="dynamicDataSource"/>
	</bean>

</beans>
